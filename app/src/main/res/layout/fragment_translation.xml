<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <!-- button to select the source language for translation -->
    <Button
        android:id="@+id/sourceLanguageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Source Language"
        android:textSize="16sp" />

    <!-- button to select the target language for translation -->
    <Button
        android:id="@+id/targetLanguageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Language"
        android:textSize="16sp" />

    <!-- edit text field for user input that needs translation -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editedText"
        android:hint="Write something..."
        android:textSize="18sp" />

    <!-- button to initiate the translation process -->
    <Button
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:textSize="18sp" />

    <!-- TextView to display the result of the translation -->
    <TextView
        android:id="@+id/translationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translation:"
        android:textSize="15sp" />

</LinearLayout>
